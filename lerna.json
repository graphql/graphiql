{
  "packages": ["packages/*", "packages/graphiql-examples/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "distTag": "next"
    },
    "version": {
      "allowBranch": ["master"],
      "message": "chore(release): publish %s"
    }
  }
}
