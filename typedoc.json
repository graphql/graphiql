{
  "name": "GraphQL Official LSP Documentation",
  "theme": "default",
  "mode": "modules",
  "out": "packages/graphiql/lsp",
  "inputFiles": [
    "**/node_modules/vscode*/**",
    "**/node_modules/@types/node/**",
    "**/node_modules/@types/codemirror*/**",
    "**/node_modules/monaco*/**"
  ],
  "exclude": "**/__tests__/**,*.spec.*,*-test.*,**/esm/**,**/dist/**,**/node_modules/**",
  "excludePrivate": false,
  "excludeNotExported": false,
  "external-modulemap": ".*/packages/([\\w\\-_]+)/",
  "ignoreCompilerErrors": true,
  "includeDeclarations": true,
  "preserveConstEnums": true,
  "readme": "./packages/graphql-language-service/README.md"
}
