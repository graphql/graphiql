# Welcome to Kiva's GraphQL API!
# Here's an example query to get you started
{
  lend {
    loans (filters: {gender: female, country: ["KE", "US"]}, limit: 5) {
      totalCount
      values {
        name
        loanAmount
        image {
          url(presetSize: small)
        }
        activity {
          name
        }
        geocode {
          country {
            isoCode
            name
          }
        }
        lenders (limit: 0) {
          totalCount
        }
        ... on LoanPartner {
          partnerName
        }
        ... on LoanDirect {
          trusteeName
        }
      }
    }
  }
}
