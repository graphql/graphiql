{
  "extends": "../../resources/tsconfig.base.esm.json",
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./esm",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es2015",
      "Es2016",
      "ES2017",
      "ES2018",
      "ESNext"
    ],
    "paths": {
      "*": ["*"]
    }
  },
  "references": [
    {
      "path": "../graphql-language-service"
    }
  ],
  "include": ["src"],
  "exclude": [
    "**/__tests__/**",
    "**/*.spec.*",
    "**/node_modules/monaco-editor-core/**/*.d.ts",
    "**/node_modules/jest-haste-map/**/*",
    "dist",
    "esm",
    "node_modules"
  ]
}
