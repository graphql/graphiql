  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es5",
    "typeRoots": ["./types"],
    "lib": [
      "dom",
      "es5",
      "es2015.collection",
      "es2015.promise",
      "es2015.iterable",
