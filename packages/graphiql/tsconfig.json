{
  "extends": "../../resources/tsconfig.base.cjs.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "jsx": "react",
    "baseUrl": ".",
    "target": "es5",
    "strictPropertyInitialization": false,
    "types": ["node", "jest"],
    "lib": ["dom"]
  },
  "include": ["src"],
  "exclude": [
    "**/__tests__/**",
    "**/dist/**.*",
    "**/*.spec.ts",
    "**/*.spec.js",
    "**/*-test.ts",
    "**/*-test.js",
    "**/*.stories.js",
    "**/*.stories.ts"
  ]
}
