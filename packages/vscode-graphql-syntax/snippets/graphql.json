{
  ".source.graphql": {
    "Interface definition": {
      "prefix": "int",
      "body": ["interface ${1:IName} {", "\t$2", "}"]
    },
    "Type definition": {
      "prefix": "typ",
      "body": [
        "type ${1:TypeName} ${2:implements ${3:IName}${4: , ${5:IName}}}{",
        "\t$5",
        "}"
      ]
    },
    "Input Field definition": {
      "prefix": "inp",
      "body": ["input ${1:TypeInput} {", "\t$2", "}"]
    },
    "Enum definition": {
      "prefix": "enu",
      "body": ["enum ${1:EnumName} {", "\t$2", "}"]
    },
    "Union definition": {
      "prefix": "uni",
      "body": ["union ${1:UnionName} = $2 | $3"]
    },
    "Fragment definition": {
      "prefix": "fra",
      "body": ["fragment ${1:FragmentName} on ${2:TypeName} {", "\t$3", "}"]
    }
  }
}
