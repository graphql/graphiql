{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["es2022", "dom"],
    "moduleResolution": "node"
  },
  "include": ["src", "tsup.config.ts"],
  "exclude": ["**/*.spec.ts"]
}
